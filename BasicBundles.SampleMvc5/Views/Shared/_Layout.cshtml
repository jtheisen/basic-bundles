<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>

    @{
        BundleConfig.DefaultRequirements.Require();
    }

    <script>
        // This hash changes when any of the required resources changes.
        var resourceHash = "@(IronStone.Web.BasicBundles.WebResources.GetCombinedHash())";
    </script>

    @Html.Raw(IronStone.Web.BasicBundles.WebResources.RenderStylesheets())

</head>
<body>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    @Html.Raw(IronStone.Web.BasicBundles.WebResources.RenderScripts())

</body>
</html>